extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Furniture, tool etc.' name='name' required='true' value=(category===undefined ? '' : category.name))
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', name='description' required='true' value=(category===undefined ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg

